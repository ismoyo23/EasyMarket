<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#EFEFEF">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:textSize="19dp"
                android:textStyle="bold"
                android:text="Easy Market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <EditText

                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="left|center_vertical"
                android:drawableStart="@drawable/ic_search"
                android:textAllCaps="false"
                android:hint="Search...."
                android:background="@drawable/splash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="29dp"/>
            <RelativeLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <androidx.cardview.widget.CardView
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:backgroundTint="@color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_favorit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="15dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--header-->
            <LinearLayout
                android:background="@drawable/header"
                android:layout_width="match_parent"
                android:layout_height="100dp">
            </LinearLayout>

            <!--card header-->
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-100dp"
                android:background="@drawable/splash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:src="@drawable/images"
                        android:layout_width="120dp"
                        android:layout_height="150dp"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </LinearLayout>
                <LinearLayout
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:text="Khusus hari ini"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="Nike Pro A12B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="3dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:text="RP . 1.200.000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:backgroundTint="#565656"
                        android:textAllCaps="false"
                        android:text="Ambil Promo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <!--card menu-->

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:background="@drawable/card_menu"
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:layout_marginTop="9dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_shirt"
                            >
                        </ImageView>
                    </LinearLayout>
                    <!--text-->
                    <TextView
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Pakaian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:background="@drawable/card_menu"
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:layout_marginTop="9dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_running_shoe"
                            >
                        </ImageView>
                    </LinearLayout>
                    <!--Text-->
                    <TextView
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Sepatu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:background="@drawable/card_menu"
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:layout_marginTop="9dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_home"
                            >
                        </ImageView>

                    </LinearLayout>
                    <!--Text-->
                    <TextView
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Properti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:background="@drawable/card_menu"
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:layout_marginTop="9dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_clock"
                            >
                        </ImageView>

                    </LinearLayout>
                    <!--Text-->
                    <TextView
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Aksesoris"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

            <!--header title product-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="New Product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- List New product -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--Card product-->
                    <LinearLayout
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/images2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>

                            <TextView
                                android:layout_marginTop="66dp"
                                android:text="Nike Max A10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="79dp"
                                android:text="RP.120.000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!--Card product-->
                    <LinearLayout
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/images3"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>

                            <TextView
                                android:layout_marginTop="66dp"
                                android:text="Nike Max A10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="79dp"
                                android:text="RP.120.000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!--Card product-->
                    <LinearLayout
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/images4"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>

                            <TextView
                                android:layout_marginTop="66dp"
                                android:text="Nike Max A10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="79dp"
                                android:text="RP.120.000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <!--Card product-->
                    <LinearLayout
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/images5"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>

                            <TextView
                                android:layout_marginTop="66dp"
                                android:text="Nike Max A10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="79dp"
                                android:text="RP.120.000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!--Card product-->
                    <LinearLayout
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/images6"
                                android:layout_width="80dp"
                                android:layout_height="80dp"/>

                            <TextView
                                android:layout_marginTop="66dp"
                                android:text="Nike Max A10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="79dp"
                                android:text="RP.120.000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>


            <!--all product-->
            <LinearLayout

                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvResponseCode"
                    android:layout_marginLeft="16dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="All Product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!--Card product-->
                <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/GridLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:orientation="horizontal"
                    tools:context=".GridXMLActivity"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvGet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                     />

                </GridLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>

